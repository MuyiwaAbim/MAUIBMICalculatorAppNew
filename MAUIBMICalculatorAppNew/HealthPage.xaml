<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIBMICalculatorAppNew.HealthPage"
             Title="Health Recommendations">

    <VerticalStackLayout Padding="20">

        <Label Text="Health Recommendations" 
               FontSize="24" 
               HorizontalOptions="Center" 
               FontAttributes="Bold"/>

        <Label x:Name="RecommendationLabel"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="Black"
               Text="" />


        <Button Text="Back to BMI Results" 
                Clicked="OnBackToResultsClicked"
                Margin="0,10,0,0" />

        <Button Text="Back to Main Page" 
                Clicked="OnBackToMainPageClicked"
                Margin="0,10,0,0" />

    </VerticalStackLayout>

</ContentPage>
