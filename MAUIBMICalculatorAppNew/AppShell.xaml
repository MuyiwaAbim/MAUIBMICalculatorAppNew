<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIBMICalculatorAppNew.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUIBMICalculatorAppNew"
    Shell.FlyoutBehavior="Flyout"
    Title="MAUI BMI Calculator">

    <!-- User Input Page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- BMI Result Page -->
    <ShellContent
        Title="BMI Results"
        ContentTemplate="{DataTemplate local:BMIPage}"
        Route="Results" />

    <!-- Health Recommendations Page -->
    <ShellContent 
        Title="Health Recommendations"
        ContentTemplate="{DataTemplate local:HealthPage}"
        Route="Recommendations" />

</Shell>
