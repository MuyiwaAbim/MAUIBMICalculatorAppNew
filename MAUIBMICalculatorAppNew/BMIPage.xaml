<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIBMICalculatorAppNew.BMIPage"
             Title="BMI Results">

    <VerticalStackLayout Padding="20">

        <Label Text="Your BMI Result" FontSize="24" HorizontalOptions="Center" />

        <Label x:Name="BMIResultLabel" FontSize="22" HorizontalOptions="Center" TextColor="Blue"/>
        <Label x:Name="HealthStatusLabel" FontSize="20" HorizontalOptions="Center" FontAttributes="Bold"/>

        <!-- Navigation Buttons -->
        <Button Text="View Health Recommendations" Clicked="OnViewRecommendationsClicked"
         Margin="0,10,0,0"/>
        
        <Button Text="Go Back to Input Page" Clicked="OnGoBackClicked"
         Margin="0,10,0,0"/>

    </VerticalStackLayout>

</ContentPage>
